<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fondoazul_02"
    android:padding="15dp"
    tools:context=".RemplazoModeradoresActivity">


    <ImageView
        android:id="@+id/imageViewlogemp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoemp" />

    <ImageView
        android:id="@+id/imageViewlogtec"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotec" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Inicio Moderdadores"
        android:background="@drawable/text_style"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/imageViewlogtec"
        app:layout_constraintStart_toEndOf="@+id/imageViewlogemp"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextBuscaM"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/buscarM"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imageButtonBuscar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNombreM"
                android:contentDescription="@string/buscarM"
                app:srcCompat="@android:drawable/ic_menu_search" />

            <EditText
                android:id="@+id/editTextNombreM"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/nombreM"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.639"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/correo"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNombreM2"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/text_style"
                android:gravity="center"
                android:text="Area principal"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCorreo" />

            <Spinner
                android:id="@+id/spinnerAreaPrincipal"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/caja_text_style"
                android:contentDescription="@string/areaPri"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/text_style"
                android:gravity="center"
                android:text="Area secundaria"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerAreaPrin" />

            <Spinner
                android:id="@+id/spinnerAreaSecundaria"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/caja_text_style"
                android:contentDescription="@string/areaSec"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextInstitucion"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/institucion"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerAreaSec"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_style"
                android:gravity="center"
                android:text="Moderador de remplazo"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextInstitucion" />


            <EditText
                android:id="@+id/editTextNombreMRempazo"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/nombreMR"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonBuscar" />

            <EditText
                android:id="@+id/editTextCorreoMRemplazo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/correoRemp"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNombreM2"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextContraseñaM"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/passwordMR"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextInstitucion" />

            <EditText
                android:id="@+id/editTextContraseñaM2"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/ConfPswM"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextContraseñaM" />


            <EditText
                android:id="@+id/editTextInstitucionMRemplazo"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/caja_text_style"
                android:gravity="center"
                android:hint="@string/institucion"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editTextCorreoMRemplazo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/imageButtonGuardar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/btn_style"
                    android:contentDescription="@string/Guardar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextNombreMRempazo"
                    app:srcCompat="@android:drawable/ic_menu_save" />

                <ImageButton
                    android:id="@+id/imageButtonCancelar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_style"
                    android:contentDescription="@string/Cancelar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.525"
                    app:layout_constraintStart_toEndOf="@+id/imageButtonGuardar"
                    app:layout_constraintTop_toBottomOf="@+id/editTextNombreMRempazo"
                    app:srcCompat="@android:drawable/btn_dialog" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>