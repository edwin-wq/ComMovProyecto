<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">


    <EditText
        android:id="@+id/editTextNombreM"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/caja_text_style"
        android:hint="@string/nombreM"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:hint="@string/correo"
        android:inputType="textPersonName"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextArea1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:hint="@string/areaPri"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/editTextarea2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:hint="@string/areaSec"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editTextInstitucion"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/text_style"
        android:text="Moderador que remplaza"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextNombreMRempazo"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/caja_text_style"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="no"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />






</LinearLayout>